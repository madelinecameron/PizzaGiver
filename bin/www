#!/usr/bin/env node

/**
 * Module dependencies.
 */

var app = require('../app');
var debug = require('debug')('PizzaForYou:server');
var http = require('http');
var dominos = require('../node_modules/node-dominos-pizza-api/dominos-pizza-api');
var hogan = require('hjs');
var mongoose = require('mongoose');
var fs = require('fs');
var shortid = require('shortid');
var Order = require('../pizzaDB')(mongoose).Orders;
var Email = require('../pizzaDB')(mongoose).Emails;
var proxy = require('http-proxy');
var config = require('../conf/config.json');
var dbString = "mongodb://%USER%:%PWD%@ds047911.mongolab.com:47911/pizzaforyou".replace("%USER%", config.db.user).replace('%PWD%', config.db.password);
mongoose.connect(dbString);

/**
 * Get port from environment and store in Express.
 */

var port = normalizePort(process.env.PORT || '3000');
app.set('port', port);

/**
 * Create HTTP server.
 */

var serverHttp = http.createServer(app);
var ioHttp = require('socket.io')(serverHttp); //Socket.io connection

/**
 * Listen on provided port, on all network interfaces.
 */

console.log("Starting server on port 3000...");
serverHttp.listen(port);

serverHttp.on('error', onError);
serverHttp.on('listening', onListening);

console.log("Starting proxy..."); //Proxy so that socket.io can still work. Socket.io acts weird on port 80.
proxy.createProxyServer({target:'http://localhost:3000'}).listen(80);

/**
 * Normalize a port into a number, string, or false.
 */

ioHttp.on("connection", function(socket) {
    var response = "";
    socket.on('getStores', function(data) {
        console.log("Getting all stores!");
        var html = "";
        if(data.zip == null) {
            return;
        }
        if(data.address == null && data.town != null) {
            dominos.Store.findNearbyStores(data.address, 'Delivery', function(storeData) {
                fs.readfile('./views/store.mustache', function(err, data) {
                    if (err) {
                        console.log(err);
                    }
                    var template = hogan.compile(data);
                    var html = "";
                    var stores = storeData.result.Stores;
                    for (store in stores) {
                        if (store.IsOpen) {
                            html += template.render(store);
                        }
                    }
                    if(html == "") {
                        html = "<b>No stores are open or around! ):</b>";
                    }
                    console.log(html);
                });
                socket.emit('giveStores', html.replace('\n', ''));
            });
        }

        if(data.address != null && data.town != null) {
            var store = new dominos.Store();
            store.findNearbyStores(data.address, 'Delivery', function(storeData) {
                fs.readFile('./views/store.hjs', function(err, data) {
                    if (err) {
                        console.log(err);
                    }
                    var template = hogan.compile(data.toString());
                    var stores = storeData.result.Stores;
                    stores.forEach(function (store) {
                        if (store.IsOpen) {
                            html += template.render(store);
                        }
                    });
                    if(html == "") {
                        html = "<b>No stores are open or around! ):</b>";
                    }

                    socket.emit('giveStores', html.replace('\n', ''));
                });
            });
        }
    });

    socket.on('finalizeOrder', function(data) {  //Create order in database
        var options = '';
        switch(data.pizzaId) {
            case 'pepperoni':
                options = 'P=1';
                break;
            case 'sausage':
                options = 'S=1';
                break;
        }
        console.log("TEST");
        console.log(data);
        var newOrder = dominos.Order({
            customer: new dominos.Customer({
                FirstName: data.name,
                LastName: data.name,
                Address: new dominos.Address(data.address),
                Email: data.email
            }),
            storeID: data.storeId
        });

        newOrder.addItem(new dominos.Item({
            size: data.size.toString() + 'SCREEN',
            options: options,
            quantity: 1
        }));

        newOrder.validate(function() {
            console.log("Validate");
        });

        newOrder.price(function() {
            console.log("Price");
        });

        Order.create({  //Create the order in the database
            orderId: shortid.generate(),  // Internal Order ID != Dominos Order ID
            order: JSON.stringify(newOrder),
            message: data.msg
        }, function(err, order) {
            if(err) {
                console.log("Error: " + err);
            }
            else {
                socket.emit('orderFinalized', '<p><b>Order URL:</b> http://give.pizza/pay/' + order.orderId + '</p>');
            }
        });
    });

    socket.on('orderPizza', function(data) {
        console.log("ID: %s", data.id);
        Order.find({orderId: data.id}, { order: 1 }, function(err, order) {
            console.log("PizzaID: %s", order);
            var constructedOrder = new dominos.Order({ Order: order });  //Reconstructs from stored order
            constructedOrder.place(stripeToken, function(result) {
                if(result.success) {
                    socket.emit('orderSuccessful');
                }
                else {
                    socket.emit('orderFailed');
                }
            });
        })
    });

    socket.on('signUp', function(data) {
        Email.create({email: data.email}, function(err, email) {
            if(!err) {
                socket.emit('signedUp', {success: true});
            }
            else {
                console.log(err);
                socket.emit('signedUp', {success: false});
            }
        });
    });
});


function normalizePort(val) {
  var port = parseInt(val, 10);

  if (isNaN(port)) {
    // named pipe
    return val;
  }

  if (port >= 0) {
    // port number
    return port;
  }

  return false;
}

/**
 * Event listener for HTTP server "error" event.
 */

function onError(error) {
  if (error.syscall !== 'listen') {
    throw error;
  }

  var bind = typeof port === 'string'
    ? 'Pipe ' + port
    : 'Port ' + port

  // handle specific listen errors with friendly messages
  switch (error.code) {
    case 'EACCES':
      console.error(bind + ' requires elevated privileges');
      process.exit(1);
      break;
    case 'EADDRINUSE':
      console.error(bind + ' is already in use');
      process.exit(1);
      break;
    default:
      throw error;
  }
}

/**
 * Event listener for HTTP server "listening" event.
 */

function onListening() {
  var addr = serverHttp.address();
  var bind = typeof addr === 'string'
    ? 'pipe ' + addr
    : 'port ' + addr.port;
  debug('Listening on ' + bind);
}
